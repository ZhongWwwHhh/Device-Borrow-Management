#:kivy 2.0.0

<ZhBtn@Button>:
    font_name: 'msyh'
    font_size: 70

<MainMenu>:
    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.9, 1
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size
    
    ZhBtn:
        text: '出借'
        size_hint: .33, .67
        pos_hint: {'x': .04, 'y': .17}
    ZhBtn:
        text: '归还'
        size_hint: .33, .67
        pos_hint: {'x': .42, 'y': .17}
    ZhBtn:
        text: '管理'
        size_hint: .17, .67
        pos_hint: {'x': .79, 'y': .17}