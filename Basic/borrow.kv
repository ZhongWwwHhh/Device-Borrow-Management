#:kivy 2.1.0

<Borrow>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size
    
    Camera:
        id: camera
        play: True
        size_hint: 1, 1
        pos_hint: {'x': 0, 'y': 0}
        

    ZhBtn:
        text: '确认借出'
        font_size: 50
        size_hint: .2, .1
        pos_hint: {'x': .66, 'y': .2}
        on_press: root.capture()
    
    ZhBtn:
        text: '取消'
        font_size: 50
        size_hint: .2, .1
        pos_hint: {'x': .33, 'y': .2}
        on_press: root.cancel()